{
  "name": "@fairfx/after",
  "private": false,
  "version": "1.3.2",
  "description": "Build isomorphic Javascript applications with ease.",
  "repository": "fairfx/after.js",
  "author": "Jared Palmer <jared@palmer.net>",
  "license": "MIT",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "after.js",
    "document.js",
    "asyncComponent.js",
    "ensureReady.js",
    "render.js",
    "loadInitialProps.js"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.build.json -w",
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/**/*.{ts,tsx}' '*.js'",
    "test": "razzle test --env=jsdom --no-cache",
    "test:ci": "CI=true yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/test/**/*test.ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ]
  },
  "peerDependencies": {
    "express": ">=4",
    "react": ">=16",
    "react-dom": ">=16",
    "react-helmet": ">=5.2.0",
    "react-router-dom": ">=4.2.2",
    "serialize-javascript": ">=1.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.15",
    "@types/react": "^16.7.17",
    "@types/react-dom": "^16.0.11",
    "@types/react-helmet": "^5.0.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/serialize-javascript": "^1.5.0",
    "express": "^4.16.4",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "razzle": "^2.4.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.2.2",
    "serialize-javascript": "^1.5.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.4.0",
    "typescript": "^3.2.2"
  }
}
